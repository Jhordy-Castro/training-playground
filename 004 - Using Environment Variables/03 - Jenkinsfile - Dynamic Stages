pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}

    environment {
        JSONVAR = '''
            [   {name : "Java", command: " echo 'Benfica' "},
                {name : "Node", command: " echo 'SLB' "} 
            ]
        '''
    }

    stages {
        stage('build') {
            steps {
                script {
                	def buildConfigs = [] = readJSON text : "$JSONVAR"
                	buildConfigs.each{ buildConfig ->
                        stage(buildConfig.name){
                            sh "echo '$buildConfig.name' && $buildConfig.command"
                        }
					}
                }
            }
        }
    }
}
